# Database
MONGODB_URL=mongodb://localhost:27017/medgloss
DATABASE_NAME=medgloss

# AI Service
GEMINI_API_KEY=your_api_key_here
GOOGLE_CLOUD_PROJECT_ID=your_project_id
GOOGLE_CLOUD_LOCATION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=./google_service_account.json

# Authentication
JWT_SECRET_KEY=your_jwt_secret_here_change_in_production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=43200

# OTP Service Configuration
DEFAULT_OTP_METHOD=sms
# Options: "sms" or "email"
# This determines which OTP service to use by default

# SMS Service (Fast2SMS)
FAST2SMS_API_KEY=your_fast2sms_api_key_here

# Email Service (SMTP)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=52428800

# OCR Scripts Path
OCR_SCRIPTS_PATH=/home/unknown/Documents/medgloss-data-extractorfiles

# Redis
REDIS_URL=redis://localhost:6379

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=StudyBuddy
VERSION=1.0.0
DESCRIPTION=AI-powered study companion for medical students

# Upload Restrictions
RESTRICT_UPLOAD_TIMING=true
UPLOAD_COOLDOWN_MINUTES=5
