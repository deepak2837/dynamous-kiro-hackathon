# Database
MONGODB_URL=mongodb+srv://your-username:your-password@your-cluster.mongodb.net/?appName=studybuddy
DATABASE_NAME=studybuddy

# CORS Configuration
ALLOWED_ORIGINS=https://study-material-generator.netlify.app,http://localhost:3000,http://localhost:3001

# AI Service - Gemini Configuration
GEMINI_API_KEY=your-gemini-api-key-here
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_LOCATION=us-central1

# Authentication
JWT_SECRET_KEY=your-secure-jwt-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# OTP Service Configuration
DEFAULT_OTP_METHOD=email

# Email Service (SMTP)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=52428800
MAX_IMAGES_PER_UPLOAD=25

# File size limits (in bytes)
MAX_PDF_SIZE=50485760
MAX_IMAGE_SIZE=10485760
MAX_SLIDE_SIZE=104857600

# Upload restrictions
UPLOAD_COOLDOWN_MINUTES=0
ENABLE_UPLOAD_RESTRICTIONS=true

# Rate Limiting
ENABLE_RATE_LIMITING=true

# AWS S3 Configuration (if using S3 storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-south-1
STUDY_BUDDY_BUCKET_NAME=your-s3-bucket-name
STORAGE_MODE=LOCAL
